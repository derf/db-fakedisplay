% if (not $wr or $wr_error) {
  <div class="container">
    <div class="error">
      <strong>Fehler bei der Abfrage der Wagenreihung:</strong>
      <%= $wr_error // 'Unbekannter Fehler' %>
    </div>
  </div>
% }
